{% extends 'base.html.twig' %}

{% block title %}Car{% endblock %}

{% block body %}
<div class="container ">
    <h1 class="d-flex justify-content-center">Car</h1>
        <table class="table ">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ car.id }}</td>
                </tr>
                <tr>
                    <th>NbSeats</th>
                    <td>{{ car.nbSeats }}</td>
                </tr>
                <tr>
                    <th>NbDoors</th>
                    <td>{{ car.nbDoors }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ car.name }}</td>
                </tr>
                <tr>
                    <th>Cost</th>
                    <td>{{ car.cost }}</td>
                </tr>
            </tbody>
        </table>
    <div class="d-flex justify-content-center">
        <button type="button" class="btn btn-primary btnCustom"><a href="{{ path('app_car_index') }}">back to list</a></button>
        <button type="button" class="btn btn-warning btnCustom"><a href="{{ path('app_car_edit', {'id': car.id}) }}">edit</a></button>
        {{ include('car/_delete_form.html.twig') }}
    </div>  
</div>
{% endblock %}
