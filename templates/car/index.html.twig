{% extends 'base.html.twig' %}

{% block title %}Car index{% endblock %}

{% block body %}
<div class="container">
    <h1  class="d-flex justify-content-center" >Car index</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>NbSeats</th>
                    <th>NbDoors</th>
                    <th>Name</th>
                    <th>Cost</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for car in pagination %}
                <tr>
                    <td>{{ car.id }}</td>
                    <td>{{ car.nbSeats }}</td>
                    <td>{{ car.nbDoors }}</td>
                    <td>{{ car.name }}</td>
                    <td>{{ car.cost }}</td>
                    <td>
                    <button type="button" class="btn btn-primary"> <a href="{{ path('app_car_show', {'id': car.id}) }}">show</a></button>
                    <button type="button" class="btn btn-warning"><a href="{{ path('app_car_edit', {'id': car.id}) }}">edit</a></button>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    <div class="d-flex justify-content-center">
        <button type="button" class="btn btn-success "><a href="{{ path('app_car_new') }}">Create new</a></button>
    </div>
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div> 
</div>
{% endblock %}
